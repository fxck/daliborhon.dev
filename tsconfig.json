{
    "extends": "astro/tsconfigs/strict",
    "include": ["src", "scripts"],
    "compilerOptions": {
        "typeRoots": ["./node_modules/@types"],
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "Bundler",
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@i18n/*": ["src/i18n/*"],
            "@public/*": ["src/public/*"],
            "@layouts/*": ["src/layouts/*"],
            "@config": ["site.config.ts"],
        }
    }
}
